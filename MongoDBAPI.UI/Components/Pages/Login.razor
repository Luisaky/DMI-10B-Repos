@page "/"
@inject NavigationManager NavigationManager
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow" style="width: 350px;">
        <h3 class="text-center mb-4">Iniciar Sesión</h3>
        <div class="form-group mb-3">
            <label for="username" class="form-label">Usuario:</label>
            <input type="text" id="username" class="form-control" @bind="username" placeholder="Ingrese su usuario" />
        </div>
        <div class="form-group mb-4">
            <label for="password" class="form-label">Contraseña:</label>
            <input type="password" id="password" class="form-control" @bind="password" placeholder="Ingrese su contraseña" />
        </div>
        <button class="btn btn-primary w-100" @onclick="OnLogin">Ingresar</button>
        <div class="mt-3 text-center text-danger" style="font-size: 0.9rem;">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <span>@errorMessage</span>
            }
        </div>
    </div>
</div>

@code {
    private string username;
    private string password;
    private string errorMessage;

    private void OnLogin()
    {
        // Validación simple de usuario y contraseña
        if (username == "admin" && password == "12345")
        {
            // Si es correcto, redirige a la página Home
            NavigationManager.NavigateTo("/home", true);
        }
        else
        {
            // Si es incorrecto, muestra un mensaje
            errorMessage = "Credenciales incorrectas, inténtalo de nuevo.";
        }
    }
}